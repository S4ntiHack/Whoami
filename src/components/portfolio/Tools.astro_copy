---
const technologies = [
  { id: "aircrack-ng", name: "Aircrack-ng", color: "#E3E4E6", textColor: "#333333" },
  { id: "bash", name: "Bash", color: "#B8E2C8", textColor: "#333333" },
  { id: "burpsuite", name: "Burp Suite", color: "#FF6633", textColor: "#FFFFFF" },
  { id: "chisel", name: "Chisel", color: "#6EC4DB", textColor: "#333333" },
  { id: "docker", name: "Docker", color: "#9ACFE8", textColor: "#333333" },
  { id: "gobuster", name: "Gobuster", color: "#7E57C2", textColor: "#FFFFFF" },
  { id: "immunity-debugger", name: "Immunity Debugger", color: "#8A2BE2", textColor: "#FFFFFF" },
  { id: "joomscan", name: "JoomScan", color: "#FF5722", textColor: "#FFFFFF" },
  { id: "metasploit", name: "Metasploit", color: "#E74C3C", textColor: "#FFFFFF" },
  { id: "netcat", name: "Netcat", color: "#3498DB", textColor: "#FFFFFF" },
  { id: "nmap", name: "Nmap", color: "#1A237E", textColor: "#FFFFFF" },
  { id: "python", name: "Python", color: "#F2CF97", textColor: "#333333" },
  { id: "sqlmap", name: "SQLMap", color: "#FFA500", textColor: "#333333" },
  { id: "wfuzz", name: "Wfuzz", color: "#4CAF50", textColor: "#FFFFFF" },
  { id: "wireshark", name: "Wireshark", color: "#94C9E0", textColor: "#333333" },
  { id: "wpscan", name: "WPScan", color: "#4B8BBE", textColor: "#FFFFFF" },
  { id: "aws", name: "AWS", color: "#F7C08A", textColor: "#333333" },
  { id: "aws-cli", name: "AWS CLI", color: "#A7BBCD", textColor: "#333333" },
  { id: "aws-cloudformation", name: "AWS CloudFormation", color: "#C6A6D5", textColor: "#333333" },
  { id: "aws-ec2", name: "Amazon EC2", color: "#F4D3BA", textColor: "#333333" },
  { id: "aws-iam", name: "AWS IAM", color: "#E0AFA0", textColor: "#333333" },
  { id: "aws-lambda", name: "AWS Lambda", color: "#F2C57C", textColor: "#333333" },
  { id: "aws-rds", name: "Amazon RDS", color: "#AEC3B0", textColor: "#333333" },
  { id: "aws-s3", name: "Amazon S3", color: "#C1A4DD", textColor: "#333333" },
  { id: "aws-vpc", name: "Amazon VPC", color: "#A4C1DD", textColor: "#333333" }
].sort((a, b) => a.name.localeCompare(b.name));
---

<div class="technologies-container">
  {technologies.map((tech) => (
    <div 
      class="tech-pill"
      style={`
        background-color: ${tech.color};
        color: ${tech.textColor};
        border: 1px solid ${tech.color}88;
        ${tech.id.includes('aws') ? 'border-left: 3px solid #FF9900;' : ''}
      `}
    >
      <span class="tech-icon">{tech.icon}</span>
      {tech.name}
      {tech.id.includes('aws') && <span class="aws-badge">AWS</span>}
    </div>
  ))}
</div>

<style>
  .technologies-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    padding: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .tech-pill {
    padding: 0.5rem 1rem 0.5rem 0.8rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.95rem;
    display: inline-flex;
    align-items: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    transition: all 0.3s ease;
    font-family: 'Inter', system-ui, sans-serif;
  }

  .tech-icon {
    margin-right: 8px;
    font-size: 1.1em;
    filter: drop-shadow(0 1px 1px rgba(0,0,0,0.2));
  }

  .tech-pill:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
  }

  .aws-badge {
    margin-left: 8px;
    background: #FF9900;
    color: #000;
    padding: 0.1em 0.4em;
    border-radius: 4px;
    font-size: 0.7em;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .technologies-container {
      gap: 0.6rem;
      padding: 1rem;
    }
    .tech-pill {
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
    }
  }
</style>
